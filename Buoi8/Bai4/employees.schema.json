{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "DanhSachNhanVien",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "integer",
                "minimum": 1,
                "description": "Mã định danh của nhân viên"
            },
            "hoTen": {
                "type": "string",
                "description": "Họ và tên nhân viên"
            },
            "chucVu": {
                "type": "string",
                "description": "Chức vụ hiện tại của nhân viên"
            },
            "mucLuong": {
                "type": "number",
                "minimum": 0,
                "description": "Mức lương hàng tháng của nhân viên (VNĐ)"
            },
            "trangThaiLamViec": {
                "type": "string",
                "enum": [
                    "đang làm",
                    "nghỉ việc"
                ],
                "description": "Trạng thái làm việc hiện tại"
            }
        },
        "required": [
            "id",
            "hoTen",
            "chucVu",
            "mucLuong",
            "trangThaiLamViec"
        ]
    }
}